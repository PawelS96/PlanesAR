<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ProgressBar
            style="@android:style/Widget.ProgressBar"
            android:id="@+id/loading_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/loading_label"
              android:text="Wczytywanie modeli"
              android:layout_marginTop="20dp"
              android:textSize="18sp"
              android:layout_below="@id/loading_indicator"
              android:textColor="@color/colorFont"
              android:layout_centerHorizontal="true"
    />


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/loading_progress"
              android:layout_marginTop="10dp"
              android:layout_below="@id/loading_label"
              android:textColor="@color/colorFont"
              android:layout_centerHorizontal="true"
    />

    <include layout="@layout/sample_app_title_bar"/>

    <com.pollub.samoloty.ui.Grid
            android:id="@+id/grid"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <include layout="@layout/bottom_bar"
             android:id="@+id/bottom_bar"

             android:visibility="invisible"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"
             android:layout_alignParentEnd="true"

    />

</RelativeLayout>